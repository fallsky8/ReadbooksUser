<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.readbooks.userdao.UserDAO">
	<insert id="userInsert" parameterType="user">
		insert into
		tbl_user(user_id,user_pw,user_address,user_name,user_email,user_phonenumber,user_pwquestion,user_pwanswer,user_serviceagreement,user_collectiveagreement,user_referralagreement,user_registerdate,user_point)
		values(#{user_id},#{user_pw},#{user_address},#{user_name},#{user_email},#{user_phonenumber},#{user_pwquestion},#{user_pwanswer},#{user_serviceagreement},#{user_collectiveagreement},#{user_referralagreement},sysdate,0)
	</insert>
	<select id="userCheck" parameterType="user" resultType="int">
		select
		nvl((
		select
		1 from
		tbl_user
		where
		user_id=#{user_id}
		and
		user_pw=#{user_pw}
		and
		user_outdate is null
		),0)as state
		from
		dual
	</select>
	<select id="userGet" parameterType="String" resultType="user">
		select *
		from tbl_user
		where user_id = #{user_id}
	</select>
	<update id="userOut" parameterType="user">
		update
		tbl_user set
		user_outdate = sysdate,
		user_outreason = #{user_outreason}
		where user_id
		= #{user_id}
	</update>
</mapper>
