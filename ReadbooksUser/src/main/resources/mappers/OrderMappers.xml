<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.readbooks.orderdao.OrderDAO">
	<insert id="orderInsert" parameterType="order">
		insert all
		<foreach collection="">
		into
		tbl_order(order_number,user_id,book_number,order_orderer,order_quantity,order_ordernumber)
		values(#{order_number},#{user_id},#{book_number},#{order_orderer},#{order_quantity},#{order_ordernumber})
		</foreach>
	</insert>
	<select id="orderSelect" parameterType="order" resultType="order">
		select * from tbl_order where user_id = #{user_id}
	</select>
	<select id="orderdetail" parameterType="order" resultType="order">
		select * from tbl_order where order_number=#{order_number}
	</select>
</mapper>
